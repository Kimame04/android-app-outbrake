<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/news_sv"
    android:layout_width="match_parent" android:layout_height="match_parent" android:paddingHorizontal="20dp" android:paddingVertical="20dp"
    android:background="@color/colorPrimary"
    android:scrollbarSize="20dp">
    <RelativeLayout
        android:id="@+id/news_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/news_dorscon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorSecondary"
            android:layout_marginTop="10dp"
            android:textSize="28sp"
            android:fontFamily="sans-serif-smallcaps"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/news_recycler_view"
            android:layout_below="@id/news_dorscon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            />
    </RelativeLayout>
</ScrollView>