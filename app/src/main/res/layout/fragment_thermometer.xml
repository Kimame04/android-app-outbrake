<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/thermo_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingHorizontal="10dp"
    android:scrollbarSize="20dp"
    android:background="@color/colorPrimary">
    <RelativeLayout
        android:id="@+id/thermo_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="10dp">
        <TextView
            android:id="@+id/thermo_log"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="@string/thermo_log"
            android:textSize="24sp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="@color/colorSecondary"
            />
        <LinearLayout
            android:id="@+id/thermo_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/thermo_log"
            android:gravity="center"
            >
            <NumberPicker
                android:id="@+id/thermo_log_np"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:solidColor="@color/colorPrimary"
                android:background="@color/colorSecondary"
                />
            <NumberPicker
                android:id="@+id/thermo_log_np_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:solidColor="@color/colorPrimary"
                android:background="@color/colorSecondary"
                />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/thermo_log_submit"
            style="@style/Widget.MaterialComponents.FloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:layout_below="@+id/thermo_ll"
            android:layout_centerHorizontal="true"
            android:text="@string/thermo_log_submit"
            android:fontFamily="sans-serif-smallcaps"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            app:backgroundTint="@color/colorSecondary"
            app:cornerRadius="20dp"
            />
    </RelativeLayout>
</ScrollView>